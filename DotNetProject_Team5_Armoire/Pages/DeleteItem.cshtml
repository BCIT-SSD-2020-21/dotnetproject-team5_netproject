@page
@model DotNetProject_Team5_Armoire.Pages.DeleteItemModel
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">Armoire</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <partial name="_LoginPartial" />
                        <ul class="navbar-nav flex-grow-0">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Dashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Add new Item</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">About</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="w-50 mx-auto m-5" style="height:350px;">
            <h2>Delete Item</h2>
            <div class="text-center border p-2">
                <div class="row align-items-center">
                    <div class="col-md-6 row">
                        <div class="col-md-6">
                            @Html.DisplayNameFor(model => model.Cloth.ClothName)
                        </div>
                        <div class="col-md-6">
                            @Html.DisplayFor(model => model.Cloth.ClothName)
                        </div>

                        <div class="col-md-6">
                            @Html.DisplayNameFor(model => model.Cloth.CategoryId)
                        </div>
                        <div class="col-md-6">
                            @Html.DisplayFor(model => model.Cloth.CategoryId)
                        </div>
                        <div class="col-md-6">
                            @Html.DisplayNameFor(model => model.Cloth.IsClean)
                        </div>
                        <div class="col-md-6">
                            @Html.DisplayFor(model => model.Cloth.IsClean)
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            @Html.DisplayFor(model => model.Cloth.PictureUri)
                        </div>
                    </div>
                </div>


                <form method="post" class="pt-2">
                    <input type="hidden" asp-for="Cloth.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-page="./Dashboard" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
        <footer class="border-top text-muted pb-3 pt-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        &copy; 2020 - Armoire - <a asp-area="" asp-page="/Privacy">Privacy</a>
                    </div>
                    <div class="col-md-6 text-right">
                        <ul class="list-inline">
                            <li class="list-inline-item">Follow Us:</li>
                            <li class="list-inline-item"><i class="fab fa-facebook-square"></i></li>
                            <li class="list-inline-item"><i class="fab fa-instagram-square"></i></li>
                            <li class="list-inline-item"><i class="fab fa-linkedin"></i></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>

