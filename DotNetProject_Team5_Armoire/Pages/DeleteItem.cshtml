@page
@model DotNetProject_Team5_Armoire.Pages.DeleteItemModel

@{        <div class="w-50 mx-auto m-5">
            <h2>Delete Item</h2>
            <div class="text-center border p-2">
                <div class="row align-items-center">
                    <div class="col-md-6 row">
                        <div class="col-md-6">
                            Clothing
                        </div>
                        <div class="col-md-6">
                            @Html.DisplayFor(model => model.Cloth.ClothName)
                        </div>

                        <div class="col-md-6">
                            Category
                        </div>
                        <div class="col-md-6">
                            @Html.DisplayFor(model => model.Category.Name)
                        </div>
                        <div class="col-md-6">
                            Cleanliness
                        </div>
                        <div class="col-md-6">
                            @Html.DisplayFor(model => model.Cloth.IsClean)
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <img src=@Model.Cloth.PictureUri style="width:200px; height:200px" ; />
                        </div>
                    </div>
                </div>


                <form method="post" class="pt-4">
                    <input type="hidden" asp-for="Cloth.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-page="./Dashboard" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    }

