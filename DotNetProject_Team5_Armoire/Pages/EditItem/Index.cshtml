@page
@model DotNetProject_Team5_Armoire.Pages.EditItem.IndexModel

    <div class="container pt-0">
        <div class="w-75 mx-auto mt-5">
            <h2>Edit Item</h2>
            <div class="border p-2">
                <form enctype="multipart/form-data" method="post">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ClothItem.Id" />

                            <div class="form-group">
                                <label asp-for="ClothItem.ClothName" class="control-label"></label>
                                <input asp-for="ClothItem.ClothName" class="form-control" />
                                <span asp-validation-for="ClothItem.ClothName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Choose Category</label><br />
                                <select class="form-control" asp-for="ClothItem.CategoryId">
                                    <option value="1">Top</option>
                                    <option value="2">Bottom</option>
                                </select>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" asp-for="ClothItem.IsClean" class="form-check-input" />
                                <label  class="control-label">Clean</label>
                                <span asp-validation-for="ClothItem.IsClean" class="text-danger"></span>
                            </div>
                            <br />
                            <div>
                                <label asp-for="Upload">Upload a clothing image</label>
                            </div>
                            <div>
                                <input asp-for="Upload" type="file">
                            </div>
                        </div>
                        <div class="col-md-6 text-center">
                                <img src=@Model.ClothItem.PictureUri style="width:200px; height:200px" ; />
                        </div>
                    </div>
                    <div class="form-group pt-4 text-center">
                        <input type="submit" value="Save" class="btn btn-primary" asp-roue-id="@Model.ClothItem.Id" />
                        <a asp-page="../Dashboard" class="btn btn-secondary">Cancel</a>
                    </div>

                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
