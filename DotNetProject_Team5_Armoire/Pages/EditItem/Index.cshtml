@model DotNetProject_Team5_Armoire.Pages.EditItem.IndexModel


<h1>Edit Item</h1>

<h4>Clothing Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <input type="hidden" asp-for="Cloth.Id" />
            <div class="form-group">
                <label asp-for="Cloth.ClothName" class="control-label"></label>
                <input asp-for="Cloth.ClothName" class="form-control" />
                @*<span asp-validation-for="Cloth.ClothName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Cloth.PictureUri" class="control-label"></label>
                <input asp-for="Cloth.PictureUri" class="form-control" />
                @*<span asp-validation-for="Cloth.PictureUri" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Cloth.CategoryId" class="control-label"></label>
                <input asp-for="Cloth.CategoryId" class="form-control" />
                @*<span asp-validation-for="Cloth.CategoryId" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Cloth.IsClean" class="control-label"></label>
                <input asp-for="Cloth.IsClean" class="form-control" />
                @*<span asp-validation-for="Cloth.IsClean" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

