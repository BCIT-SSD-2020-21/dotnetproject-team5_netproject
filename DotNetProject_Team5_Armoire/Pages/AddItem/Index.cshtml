@page
@model DotNetProject_Team5_Armoire.Pages.AddItem.IndexModel
@{
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Armoire</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Add new Item</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="add-item-flex-container">

        <div class="add-item-container">
            <h1>Add New Item</h1>
            <hr />
            <form enctype="multipart/form-data" asp-page="/AddItem/Index" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="Clothing.ClothName">Clothing Name</label>
                    <input type="text" class="form-control" asp-for="Clothing.ClothName" name="clothingName" aria-describedby="emailHelp" placeholder="Name of Item">
                    <span asp-validation-for="Clothing.ClothName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Choose Category</label>
                    <select class="form-control" name="category" id="exampleFormControlSelect1">
                        <option>Top</option>
                        <option>Bottom</option>
                    </select>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1" name="isClean" value="true" size="50">
                    <label class="form-check-label" for="exampleCheck1">Clean</label>
                </div>
                <br />
                <dl>
                    <dt>
                        <label></label>
                    </dt>
                    <dd>
                        <input asp-for="Upload" type="file">
                        <span></span>
                    </dd>
                </dl>
                <button asp-page-handler="Upload" type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <div class="image-container">
            <img src="~/images/red-sweater.jpeg" class="red-sweater" />
        </div>

    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2020 - Armoire - <a asp-area="" asp-page="/Privacy">Privacy</a>
                </div>
                <div class="col-md-6 text-right">
                    <ul class="list-inline">
                        <li class="list-inline-item">Follow Us:</li>
                        <li class="list-inline-item"><i class="fab fa-facebook-square"></i></li>
                        <li class="list-inline-item"><i class="fab fa-instagram-square"></i></li>
                        <li class="list-inline-item"><i class="fab fa-linkedin"></i></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
