@page
@model DotNetProject_Team5_Armoire.Pages.AddItem.IndexModel
@{
<div class="container">
    <div class="w-75 mx-auto mt-5">
        <h1>Add New Item</h1>
        <hr />
        <form enctype="multipart/form-data" asp-page="/Dashboard" method="post">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Clothing.ClothName">Clothing Name</label>
                        <input type="text" class="form-control" asp-for="Clothing.ClothName" name="clothingName" placeholder="Name of Item">
                        <span asp-validation-for="Clothing.ClothName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Choose Category</label>
                        <select class="form-control" name="category" id="exampleFormControlSelect1">
                            <option>Top</option>
                            <option>Bottom</option>
                        </select>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1" name="isClean" value="true" size="50" checked><label class="form-check-label" for="exampleCheck1">Clean</label>
                    </div>
                    <br />
                    <dl>
                        <dt>
                            <label asp-for="Upload" >Upload a clothing image</label>
                        </dt>
                        <dd>
                            <input asp-for="Upload" type="file" onchange="Picture(this)" style="width:100%; overflow:hidden">
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6 text-center">
                    <span><img class="display" style="max-width:250px"/></span>
                </div>
                <button asp-page-handler="Upload" type="submit" class="btn btn-primary mt-2">Submit</button>
            </div>
        </form>
</div>
</div>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    function Picture(input) {
        if (input.files[0]) {
            var filename = new FileReader();
            filename.onload = function (clothpic) {
                $('.display').attr('src', clothpic.target.result);
            }
            filename.readAsDataURL(input.files[0]);
        }
    }
</script>
}
}