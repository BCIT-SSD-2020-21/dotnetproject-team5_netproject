@page
@model DotNetProject_Team5_Armoire.Pages.CarouselModel
@{
}

@* ------------- TOPS ------------- *@
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" style="max-width: 50%;">
    <div class="carousel-inner">
        @foreach (var product in Model.Clothes)
        {
            <div class="carousel-item">
                <span>@product.ClothName</span>
                <img src="@product.PictureUri" class="d-block w-100" alt="...">
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>
@* ------------- BOTTOMS ------------- *@
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" style="max-width: 50%;">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="../wwwroot/images/bottoms/jeans.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="../wwwroot/images/bottoms/jeans.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="../wwwroot/images/bottoms/jeans.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
</div>