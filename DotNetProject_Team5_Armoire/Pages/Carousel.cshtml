@page
@model DotNetProject_Team5_Armoire.Pages.CarouselModel
@{
}
<div class="container" style="text-align: center;">
    @if (Model.Clothes != null && Model.Clothes.Any())
    {
        @* ------------- TOPS ------------- *@
        <h3>@Model.Categories[0].Name</h3>
        @if (Model.Tops.Any())
        {
            <div id="topsCarousel" class="carousel slide" data-bs-ride="carousel" style="margin: 0 auto;" data-bs-interval="false" data-bs-touch="true">
                <div class="carousel-inner">
                    @foreach (var product in Model.Tops)
                    {

                        if (product == Model.Tops[0])
                        {
                            <div class="carousel-item active">
                                <img src=@product.PictureUri class="d-block carousel-img" alt="@product.ClothName">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src=@product.PictureUri class="d-block carousel-img" alt="@product.ClothName">
                            </div>
                        }

                    }
                </div>
                <a class="carousel-control-prev a-button btn-size" href="#topsCarousel" role="button" data-bs-slide="prev">
                    <span class="visually-hidden">Previous</span>
                </a>
                <a class="carousel-control-next a-button btn-size" href="#topsCarousel" role="button" data-bs-slide="next">
                    <span class="visually-hidden">Next</span>
                </a>
            </div>
        }
        else
        {
            <div>
                <h4>You have no @Model.Categories[0].Name.ToLower() in your closet!</h4>
                <a asp-page="/AddItem/Index" class="a-button">Add item</a>
            </div>
           
        }

        <br/>
        @* ------------- BOTTOMS ------------- *@
        <h3>@Model.Categories[1].Name</h3>
        @if (Model.Bottoms.Any())
        {
            <div id="bottomsCarousel" class="carousel slide" data-bs-ride="carousel" style="margin: 0 auto;" data-bs-interval="false" data-bs-touch="true">
                <div class="carousel-inner">
                    @foreach (var product in Model.Bottoms)
                    {
                        if (product == Model.Bottoms[0])
                        {
                            <div class="carousel-item active">
                                <img src=@product.PictureUri class="d-block carousel-img" alt="@product.ClothName">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src=@product.PictureUri class="d-block carousel-img" alt="@product.ClothName">
                            </div>
                        }
                    }
                </div>
                <a class="carousel-control-prev a-button btn-size" href="#bottomsCarousel" role="button" data-bs-slide="prev">
                    <span class="visually-hidden">Previous</span>
                </a>
                <a class="carousel-control-next a-button btn-size" href="#bottomsCarousel" role="button" data-bs-slide="next">
                    <span class="visually-hidden">Next</span>
                </a>
            </div>
        }
        else
        {
            <div>
                <h4>You have no @Model.Categories[1].Name.ToLower() in your closet!</h4>
                <a asp-page="/AddItem/Index" class="a-button">Add item</a>
            </div>
            
        }
        <br/>
        <button>Select</button>
    }
    else
    {
        <h4>You have no items in your closet!</h4>
        <br />
        <a asp-page="/AddItem/Index" class="a-button">Add Item</a>
    }

</div>
