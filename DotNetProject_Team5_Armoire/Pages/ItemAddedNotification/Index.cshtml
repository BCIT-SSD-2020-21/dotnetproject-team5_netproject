        <div class="row">
            <div class="col-md-6">
                &copy; 2020 - Armoire - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
            <div class="col-md-6 text-right">
                <ul class="list-inline">
                    <li class="list-inline-item">Follow Us:</li>
                    <li class="list-inline-item"><i class="fab fa-facebook-square"></i></li>
                    <li class="list-inline-item"><i class="fab fa-instagram-square"></i></li>
                    <li class="list-inline-item"><i class="fab fa-linkedin"></i></li>
                </ul>
            </div>
        </div>
    </div>
