@{
}


@* ------------- HEADER ------------- *@
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Armoire</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial" />
                <ul class="navbar-nav flex-grow-0">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Add new Item</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">About</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container item-added">
    <h1>Item Successfully Added!</h1>
    <div class="btn-cont">
        <button type="button" class="btn btn-secondary"><a asp-page="/AddItem/Index">Add More</a></button>
        <button type="button" class="btn btn-secondary"><a asp-page="/Dashboard">Go to Dashboard</a></button>
    </div>
</div>

