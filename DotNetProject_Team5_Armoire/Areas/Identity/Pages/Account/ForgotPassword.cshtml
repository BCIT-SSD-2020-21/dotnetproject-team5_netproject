@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
@{
    <div class="forgot-password">
        <h1 class="forgot-password-content">@ViewData["Title"]</h1>
        <h4 class="forgot-password-content">Enter your email.</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="forgot-password-content"></label>
                        <input asp-for="Input.Email" class="form-control forgot-password-content" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary forgot-password-content">Submit</button>
                </form>
            </div>
        </div>
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
