@page
@model RegisterModel
@{
    ViewData["Title"] = "Armoire";
}


<div class="register-page">
    <div class="container-fluid">
        <h1 class="text-center text-white">@ViewData["Title"]</h1>
        <br />
        <br />
        <div class="mx-auto w-50">
            <h2 class="text-white">Register</h2>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="register-form py-2 px-5">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-secondary w-25">Register</button>
                </div>
                <div class="form-group text-center">
                    <p>
                        <span>Already with Armoire?</span>
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
                    </p>
                </div>
            </form>
        </div>
        <footer class="border-top register-footer text-white mt-5 pb-3 pt-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        &copy; Armoire
                    </div>
                    <div class="col-md-6 text-right">
                        <ul class="list-inline">
                            <li class="list-inline-item"><a asp-area="" asp-page="/Privacy">Terms</a></li>
                            <li class="list-inline-item"><a asp-area="" asp-page="/Privacy">Privacy</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
