@page
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@model LoginModel

@{
    ViewData["Title"] = "Armoire";
}

@section Head{
    <style>
        body {
            background: url("/images/login-lg.jpg");
            background-size: cover;
            height: 500px;
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
        }

        a, button, footer, .navbar {
            color: white !important
        }
    </style>
}

@section Banner {
    <header>
    </header>
}

<div class="container-fluid  login-page">

    <h1 class="text-center text-color p-5">@ViewData["Title"]</h1>
    <section class="mx-auto login-background">
        <h4 class="text-color">Welcome Back</h4>
        <form id="account" method="post" class="login-form py-2 px-5">

            <div asp-validation-summary="All" class=" text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-secondary w-50">Log in</button>
            </div>
            <div class="form-group text-center">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <span>New to Armoire? </span>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-color">Create an account</a>
                </p>
            </div>
            <input type="hidden" name="captcha" id="captchaV3Input" value="" />
        </form>
    </section>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://www.google.com/recaptcha/api.js?render=@Configuration["RecaptchaV3:SiteKey"]"></script>
    <script>
    grecaptcha.ready(function() {
        grecaptcha.execute('@Configuration["RecaptchaV3:SiteKey"]', { action: 'login' }).then(function (token) {
            $("#captchaV3Input").val(token);
        });
    });
    </script>

}
