@page
@model LoginModel

@{
    ViewData["Title"] = "Armoire";
}

@section Head{
    <style>
        body {
            background: url("/images/login-lg.jpg");
            background-size: cover;
            min-height: 100vh;
        }
    </style>
}

@section Banner {
    <header>
    </header>
}

<div class="container-fluid  login-page">

    <h1 class="text-center text-color p-5">@ViewData["Title"]</h1>
    <section style="width:50%" ; class="mx-auto">
        <h4 class="text-color pt-5">Welcome Back</h4>
        <form id="account" method="post" class="login-form py-2 px-5">

            <div asp-validation-summary="All" class=" text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-secondary px-5 w-25">Log in</button>
            </div>
            <div class="form-group text-center">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <span>New to Armoire? </span>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-color">Create an account</a>
                </p>
            </div>
        </form>
    </section>

    <footer class="border-top register-footer text-white mt-3 pb-3">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    &copy; Armoire
                </div>
                <div class="col-md-6 text-right">
                    <ul class="list-inline">
                        <li class="list-inline-item "><a asp-area="" asp-page="/Privacy" class="text-color">Terms</a></li>
                        <li class="list-inline-item "><a asp-area="" asp-page="/Privacy" class="text-color">Privacy</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
